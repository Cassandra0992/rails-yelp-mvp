<div class="container">
  <div class="nav-bar">
    <div class="nav-content">
      <h4><%= link_to "All restaurants", restaurants_path %></h4>
    </div>
  </div>

  <div class="form-content">
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection: 0..5 %>
      <%= f.submit "Laisser un commmentaire", class: "btn btn-primary"%>
    <% end %>
  </div>
</div>
